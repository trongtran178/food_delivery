<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:id="@+id/imagewithlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="56dp"
            app:layout_constraintTop_toTopOf="@id/imagewithlabel">
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/capture"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listtile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="@id/imagewithlabel">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="17dp"

                android:layout_height="wrap_content"
                android:text="Canh bún cô Ba"></TextView>

            <TextView
                android:id="@+id/subtitle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã khuyến mãi. Có người mới đặt giao hàng tận nơi"
                android:textStyle="normal"
                android:textSize="13dp"
                ></TextView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
